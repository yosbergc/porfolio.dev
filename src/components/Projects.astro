---
import GitHub from "./icons/GitHub.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const PROJECTS = [
  {
    title: "Pergola Kits - eCommerce with Astro and Claude Code",
    description:
      "Initial mockup from scratch of a pergola kits eCommerce SEO optimized. Created with Astro, Tailwind with help of Claude.",
    link: "https://pergola-ecommerce.vercel.app/",
    github: "https://github.com/yosbergc/pergola-ecommerce",
    image: "/projects/pergola-kits.jpg"
  },
  {
    title: "BlackSheepSearch - Blog Finder with NextJS",
    description:
      "SaaS that helps business find blog opportunities to outreach them and get backlinks. Created with NextJS, Astro, and some help from Claude. Implemented payment gateway (Stripe) and Supabase to authentication and save information.",
    link: "https://www.blacksheepsearch.com/",
    image: "/projects/blacksheepsearch.jpg",
    github: 'https://github.com/yosbergc/blog-finder-nextjs'
  },
  {
    title: 'Kyrosearch - A better GSC Landing Page',
    description: 'Transform raw Google Search Console data into actionable insights. Discover page 2 keywords, identify content gaps, and more. Created with NextJS.',
    link: 'https://seo-tool-landing.vercel.app/',
    image: '/projects/kyrosearch.jpg'
  },
  {
    title: 'Google Translate Clone',
    description: 'Just another clone of Google Translate for fun created with NextJS and Tailwind.',
    link: 'https://google-translate-typescript.vercel.app/',
    image: '/projects/google-translate.jpg'
  }
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



